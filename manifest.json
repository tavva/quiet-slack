{
  "name": "Quiet Slack",
  "version": "0.1",
  "description": "Use Slack without knowing if there are any new messages",
  "manifest_version": 2,

  "content_scripts": [
    {
      "matches": ["https://app.slack.com/client*"],
      "css": ["styles/inject.css"],
      "js": ["scripts/inject.js"]
    }
  ]
}
